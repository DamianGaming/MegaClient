{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev -- --host localhost --port 5173",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "MegaClient",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "dialog": {
        "confirm": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.megastudios.megaclient",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/**"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "MegaClient",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "label": "main",
        "visible": false
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/DamianGaming/MegaClient/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5NjA1NEZFN0I3OTg0QkMKUldTOGhIbDcvbFJnU1JFWnF4ckFoZzJlQnV2V01ERlFVdjdtY01yRWRVbENJWU50WkpOVGlkS1MK"
    }
  }
}
